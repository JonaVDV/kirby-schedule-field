{
    "name": "ima/kirby-schedule-field",
    "description": "A Kirby CMS plugin for managing schedules.",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "getkirby/cms": "^4.0",
        "getkirby/composer-installer": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "IMA\\KirbyScheduleField\\": ""
        }
    },
    "extra": {
        "kirby-plugin": {
            "name": "Kirby Schedule Field",
            "aliases": {
                "fields/schedule": "IMA\\KirbyScheduleField\\ScheduleField"
            }
        },
        "installer-name": "kirby-schedule-field",
        "kirby-cms-path": false
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    }
}
